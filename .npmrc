# pnpm Configuration

# Strict management - prevent phantom dependencies
strict-peer-dependencies=false

# Use lockfile
lockfile=true

# Auto-install peer dependencies
auto-install-peers=true

# Prefer workspace packages
prefer-workspace-packages=true

# Show deprecation warnings
show-deprecations=true

# Node linker - use node_modules for compatibility
node-linker=hoisted

# Registry
registry=https://registry.npmjs.org/

# Save exact versions (avoid caret/tilde)
save-exact=false

# Use exact for peer dependencies
save-peer=true

# Shamefully hoist for better compatibility with tools
shamefully-hoist=true
